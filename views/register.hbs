 <h1>Register</h1>


<div class="form">
    <form method="POST" action="/users/register">
        <label for="email">Email:</label>
        <input type="text" id="email"name="email"  value={{email}}><br>

        <label for="name">Password:</label>
        <input type="password" id="password" name="password" value={{password}}><br>

        <label for="fName">First name:</label>
        <input type="text" id="fName"name="fName" value={{fName}}><br>

        <label for="lName">Last name:</label>
        <input type="text" id="lName"name="lName" value={{lName}}><br>

        <label for="pic">Profile Picture:</label>
        <input type="text" id="profilePicture"name="profilePicture" value={{profilePicture}}><br>

        <input type="submit" value="Register">
        <p>Have An Account? <a href="/users/login">Login</a></p>
    </form>
     
</div>

   