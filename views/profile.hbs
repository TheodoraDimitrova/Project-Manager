<h1>My Profile</h1>
<div class="profile-box">
  <img src={{user.profilePicture}}>
  <div class="profile">
    <div class="info">
      <h3>My Teams</h3>
     {{#if user.teams}} 
     {{#each user.teams}}
      <form method="POST" action="/users/leave/{{_id}}">
        <p>{{name}}</p>
        <input type="submit" value="Leave Team">
      </form>
      {{/each}}
       {{else}}
<p>You have no teams!</p>
       {{/if}}

    </div>
    <div class="more-info">
      <h3>My Projects</h3>
      {{#if projects.length}}
      {{#each projects}}
      <p>{{this}}</p>
      {{/each}}
      {{else}}
      <p>You have no projects!</p>
      {{/if}}
    </div>
  </div>
</div>